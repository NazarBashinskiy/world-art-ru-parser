{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "declaration": true,
    "esModuleInterop": true,
    "sourceMap": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules"]
}